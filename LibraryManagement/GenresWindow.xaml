<Window x:Class="LibraryManagement.GenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жанрами"
        Height="500" Width="680"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,14">
            <TextBlock Text="Управление жанрами"
                       FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Genres List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="14,10"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <TextBlock Text="Список жанров" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextBrush}"/>
                    </Border>

                    <ListBox x:Name="GenresList" Grid.Row="1"
                             SelectionChanged="GenresList_SelectionChanged"
                             BorderThickness="0" Padding="4"
                             FontSize="13">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,6">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                                    <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="Книг: "/>
                                        <Run Text="{Binding Books.Count, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Edit Panel -->
            <Border Grid.Column="1" Background="White" CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="14,10"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <TextBlock Text="Данные жанра" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextBrush}"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="14,14">
                        <TextBlock Text="НАЗВАНИЕ" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="GenreNameBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                        <TextBlock Text="ОПИСАНИЕ" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="DescriptionBox" Style="{StaticResource ModernTextBox}"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 Height="100" VerticalContentAlignment="Top"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="14,0,14,14">
                        <Button Content="Новый" Click="NewGenre_Click"
                                Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Сохранить" Click="SaveGenre_Click"
                                Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Удалить" Click="DeleteGenre_Click"
                                Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
