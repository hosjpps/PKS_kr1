<Window x:Class="LibraryManagement.AuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление авторами"
        Height="560" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,14">
            <TextBlock Text="Управление авторами"
                       FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Authors List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="14,10"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <TextBlock Text="Список авторов" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextBrush}"/>
                    </Border>

                    <ListBox x:Name="AuthorsList" Grid.Row="1"
                             SelectionChanged="AuthorsList_SelectionChanged"
                             BorderThickness="0" Padding="4"
                             FontSize="13">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,6">
                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="{Binding Country}"/>
                                        <Run Text=" · Книг: "/>
                                        <Run Text="{Binding Books.Count, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Edit Panel -->
            <Border Grid.Column="1" Background="White" CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="14,10"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                        <TextBlock Text="Данные автора" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextBrush}"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="14,14">
                        <TextBlock Text="ИМЯ" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="FirstNameBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                        <TextBlock Text="ФАМИЛИЯ" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="LastNameBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                        <TextBlock Text="ДАТА РОЖДЕНИЯ" Style="{StaticResource FieldLabel}"/>
                        <DatePicker x:Name="BirthDatePicker" Margin="0,0,0,12" FontSize="13"/>

                        <TextBlock Text="СТРАНА" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="CountryBox" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="14,0,14,14">
                        <Button Content="Новый" Click="NewAuthor_Click"
                                Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Сохранить" Click="SaveAuthor_Click"
                                Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                        <Button Content="Удалить" Click="DeleteAuthor_Click"
                                Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
